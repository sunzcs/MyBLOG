@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .custom-bg {
        background-image: url('/images/arkaplan.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        
    }
    
</style>

<div class="container mt-5">
    <!-- Başlık -->
    <div class="row">
        <div class="col-md-12 text-center mb-4">
            <div style="background: linear-gradient(to right, #d6f0ff, #eaf8ff); padding: 20px; border-radius: 12px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                <h1 style="font-size: 30px; color: #0056b3; margin-bottom: 10px;">✨ Admin Paneline Hoşgeldiniz! ✨</h1>
                <p style="font-size: 18px; color: #333;">Buradan kendini, yeteneklerini ve projelerini kolayca yönetebilirsin.</p>
            </div>
        </div>
    </div>

    <!-- Kartlar -->
    <div class="row custom-bg">
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-info shadow h-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-home"></i> Ana Sayfa</h5>
                    <p class="card-text">Genel bilgilerini buradan görebilirsin.</p>
                    <a href="/Home/Me" class="btn btn-light btn-sm mt-auto">Git</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card text-white bg-primary shadow h-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-user"></i> Hakkımda</h5>
                    <p class="card-text">Kendini tanıttığın bilgileri buradan düzenle.</p>
                    <a href="/Home/Education" class="btn btn-light btn-sm mt-auto">Git</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card text-white bg-success shadow h-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-cogs"></i> Beceriler</h5>
                    <p class="card-text">Yeteneklerini burada yönetebilirsin.</p>
                    <a href="/Home/Skills" class="btn btn-light btn-sm mt-auto">Git</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card text-white bg-warning shadow h-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-language"></i> Yabancı Diller</h5>
                    <p class="card-text">Dil bilgilerini düzenle.</p>
                    <a href="/Home/Lang" class="btn btn-light btn-sm mt-auto">Git</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card text-white bg-danger shadow h-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-align-left"></i> Metinler</h5>
                    <p class="card-text">Siteye özel metin içeriklerini buradan gir.</p>
                    <a href="/Home/Text" class="btn btn-light btn-sm mt-auto">Git</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card text-white bg-secondary shadow h-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-image"></i> Resim</h5>
                    <p class="card-text">Resim kayıtlarını buradan yönet.</p>
                    <a href="/Home/Img" class="btn btn-light btn-sm mt-auto">Git</a>
                </div> 
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-dark shadow h-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-white"><i class="fas fa-link"></i> Link</h5>
                    <p class="card-text">Link kayıtlarını buradan yönet.</p>
                    <a href="/Home/Link" class="btn btn-light btn-sm mt-auto">Git</a>
                </div>
            </div>
        </div>
    </div>
</div> 
<script>
    if (window.performance && window.performance.navigation.type === 2) {
        // Geri tuşuyla gelindiyse sayfayı yeniden yükle
        window.location.reload(true);
    }
</script>
 