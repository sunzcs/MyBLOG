        <!-- PROJELERİM SECTİON -->
        <section id="portfolio" class="portfolio section-bg" style="padding-top: 120px; margin-top: -80px;">

  <div class="container section-title custom-bg" data-aos="fade-up">
    <h2>Projelerim</h2>
