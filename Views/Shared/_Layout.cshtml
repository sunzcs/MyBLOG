        <script>
          document.addEventListener("DOMContentLoaded", function () {
            const filters = document.querySelectorAll(".skill-filter");
            const skillText = document.getElementById("skill-text");
            const skillArrow = document.getElementById("skill-arrow");
            const arrowTooltip = document.getElementById("arrow-tooltip");
            const skillTexts = {
              "1": "C ve C# dillerinde, temel algoritma mantığını pekiştirmek amacıyla Not Ortalaması Hesaplayıcı, Sayı Tahmin Oyunu ve Basit Hesap Makinesi gibi kullanıcı etkileşimli küçük projeler geliştirdim. Bu uygulamalar, basit matematik işlemleri ve koşul yapıları kullanılarak tasarlanmıştır.",
              "2": "Java ile konsol tabanlı, kullanıcı etkileşimli bir canavar dövüş oyunu geliştirdim. Oyuncu, rastgele karşısına çıkan canavarlarla savaşarak puan kazanmakta ve karakterin can durumu dinamik olarak güncellenmektedir. Temel oyun döngüsü, karar yapıları ve nesne yönelimli programlama prensipleri kullanılarak tasarlanmıştır.",
              "3": "Bu projede kişisel bir web sitesi geliştirdim. HTML, CSS, JavaScript ve ASP.NET Core MVC teknolojilerini kullandım. Sitede hakkımda, becerilerim, projelerim ve iletişim gibi bölümler yer alıyor. Admin paneli üzerinden içerikleri düzenleyebiliyorum. Dinamik yapısıyla mobil uyumlu, sade ve kullanışlı bir tasarım oluşturdum."
            };

            // Tooltip göster/gizle
            skillArrow.addEventListener("mouseenter", function() {
              arrowTooltip.style.display = "block";
            });
            skillArrow.addEventListener("mouseleave", function() {
              arrowTooltip.style.display = "none";
            });

            // İlk açılışta ilk skill'in metni gösterilsin
            if (filters.length > 0) {
              const firstId = filters[0].getAttribute("data-id");
              skillText.textContent = skillTexts[firstId] || "Bu beceri için bilgi eklenmemiş.";
              filters.forEach(f => f.classList.remove("filter-active"));
              filters[0].classList.add("filter-active");
            }

            filters.forEach(filter => {
              filter.addEventListener("click", () => {
                const skillId = filter.getAttribute("data-id");
                let text = skillTexts[skillId] || "Bu beceri için bilgi eklenmemiş.";
                skillText.textContent = text;
                filters.forEach(f => f.classList.remove("filter-active"));
                filter.classList.add("filter-active");
              });
            });
          });
        </script>

        

          <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
          <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
          <script src="@Url.Content("~/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
          <script src="@Url.Content("~/vendor/php-email-form/validate.js")"></script>
          <script src="@Url.Content("~/vendor/aos/aos.js")"></script>
          <script src="@Url.Content("~/vendor/typed.js/typed.umd.js")"></script>
          <script src="@Url.Content("~/vendor/purecounter/purecounter_vanilla.js")"></script>
          <script src="@Url.Content("~/vendor/waypoints/noframework.waypoints.js")"></script>
          <script src="@Url.Content("~/vendor/isotope-layout/isotope.pkgd.min.js")"></script>
          <script src="@Url.Content("~/vendor/imagesloaded/imagesloaded.pkgd.min.js")"></script>
          <script src="@Url.Content("~/vendor/glightbox/js/glightbox.min.js")"></script>
          <script src="@Url.Content("~/vendor/swiper/swiper-bundle.min.js")"></script>
            @await RenderSectionAsync("Scripts", required: false)
            
            <script>
              var form = document.getElementById("my-form");
              async function handleSubmit(event) {
                event.preventDefault();
                var status = document.getElementById("my-form-status");
                var data = new FormData(event.target);
                fetch(event.target.action, {
                  method: form.method,
                  body: data,
                  headers: {
                      'Accept': 'application/json'
                  }
                }).then(response => {
                  if (response.ok) {
                    status.innerHTML = "Mesajınız başarıyla gönderildi!";
                    status.style.color = "green";
                    form.reset()
                  } else {
                    response.json().then(data => {
                      if (Object.hasOwn(data, 'errors')) {
                        status.innerHTML = data["errors"].map(error => error["message"]).join(", ")
                      } else {
                        status.innerHTML = "Gönderim sırasında bir hata oluştu.";
                      }
                      status.style.color = "red";
                    })
                  }
                }).catch(error => {
                  status.innerHTML = "Sunucuya ulaşılamadı. Lütfen daha sonra tekrar deneyin.";
                  status.style.color = "red";
                });
              }

              form.addEventListener("submit", handleSubmit);
            </script>

    </body>
