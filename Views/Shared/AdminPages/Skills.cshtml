@model List<myblog.Models.Skills>

@{
    ViewBag.Title = "Yeteneklerim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeteneklerim</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Yetenek Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var skill in Model)
        {
            <tr>
                <td>@skill.SkillsId</td>
                <td>
                    <input type="text" id="skill-@skill.SkillsId" value="@skill.SkillName" class="form-control" />
                </td>
                <td>
                    <button class="btn btn-primary" onclick="updateSkill(@skill.SkillsId)">Güncelle</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h4>Yeni Yetenek Ekle</h4>
<div class="input-group mb-3">
    <input type="text" id="newSkill" class="form-control" placeholder="Yeni yetenek adı" />
    <button class="btn btn-success" onclick="addSkill()">Ekle</button>
</div>

<script>
    function updateSkill(id) {
        const value = document.getElementById('skill-' + id).value;

        fetch('/Skills/UpdateAll', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ skillsId: id, skillName: value })
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert("Güncellendi");
            } else {
                alert(data.message);
            }
        });
    }

    function addSkill() {
    const value = document.getElementById('newSkill').value;

    fetch('@Url.Action("Add", "Skills")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ skillName: value })
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert(data.message);
        }
    });
}

</script>
