@model myblog.Models.Me
@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
        <title>Ana Sayfa</title>
<style>
            table {
                width: 50%;
                border-collapse: collapse;
                margin-bottom: 10px;
            }
            th, td {
                border: 1px solid #444;
                padding: 8px;
                text-align: left;
            }
            button {
                padding: 8px 16px;
                font-size: 16px;
                background-color: #007bff;
                color: white;
            border-radius: 6px;
                cursor: pointer;
            }
            button:hover {
                background-color: #0056b3;
            }
            .modal-backdrop {
                display: none !important;
            }
            
            /* Modal arka planını şeffaf yap */
            .modal {
                background-color: transparent;
            }
</style>

<body>

    <table class="table">
            <thead>
                <tr>
                    <th>...</th>
                    <th>DEĞERLER</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>İsim</td><td id="me-name">@Model.Name</td></tr>
                <tr><td>Soyisim</td><td id="me-surname">@Model.Surname</td></tr>
                <tr><td>Email</td><td id="me-email">@Model.Email</td></tr>
                <tr><td>Telefon</td><td id="me-phonenum">@Model.Phonenum</td></tr>
                <tr><td>Doğum Günü</td><td id="me-birthday">@Model.Birthday</td></tr>
                <tr><td>Adres</td><td id="me-address">@Model.Address</td></tr>
            </tbody>
        </table>

        <button type="button" class="btn btn-primary edit-btn" id="editBtn">Düzenle</button>


                                                @*Düzeltme için modal ksımı*@
    <div class="modal" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true" data-bs-backdrop="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Tüm Bilgileri Düzenle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <input class="form-control mb-2" id="input-name" placeholder="İsim">
                    <input class="form-control mb-2" id="input-surname" placeholder="Soyisim">
                    <input class="form-control mb-2" id="input-email" placeholder="Email">
                    <input class="form-control mb-2" id="input-phonenum" placeholder="Telefon">
                    <input type="date" class="form-control mb-2" id="input-birthday" placeholder="Doğum Günü">
                    <textarea class="form-control" id="input-address" placeholder="Adres"></textarea>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button class="btn btn-primary" id="saveAllChanges">Kaydet</button>
                </div>
            </div>
        </div>
    </div>


                                        @*Veri tabanına veri yollamak*@
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const modal = new bootstrap.Modal(document.getElementById('editModal'));

        // Modalı aç
        document.getElementById('editBtn').addEventListener('click', () => {
            document.getElementById('input-name').value = document.getElementById('me-name').textContent.trim();
            document.getElementById('input-surname').value = document.getElementById('me-surname').textContent.trim();
            document.getElementById('input-email').value = document.getElementById('me-email').textContent.trim();
            document.getElementById('input-phonenum').value = document.getElementById('me-phonenum').textContent.trim();

            // Tarihi düzgün formata çevir
            let rawDate = document.getElementById('me-birthday').textContent.trim();
            let parsedDate = new Date(rawDate);
            let formattedDate = parsedDate.toISOString().split('T')[0]; // yyyy-MM-dd
            document.getElementById('input-birthday').value = formattedDate;

            document.getElementById('input-address').value = document.getElementById('me-address').textContent.trim();

            modal.show();
        });

        // Kaydet butonuna basılınca tüm verileri gönder
        document.getElementById('saveAllChanges').addEventListener('click', () => {
            const data = {
                Id: 1, // ID sabit
                Name: document.getElementById('input-name').value.trim(),
                Surname: document.getElementById('input-surname').value.trim(),
                Email: document.getElementById('input-email').value.trim(),
                Phonenum: document.getElementById('input-phonenum').value.trim(),
                Birthday: document.getElementById('input-birthday').value, // zaten yyyy-MM-dd
                Address: document.getElementById('input-address').value.trim()
            };

            fetch('/Me/UpdateAll', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(res => res.json())
            .then(response => {
                if (!response.success) {
                    alert(response.message || "Bilinmeyen bir hata oluştu.");
                    return;
                }

                document.getElementById('me-name').textContent = data.Name;
                document.getElementById('me-surname').textContent = data.Surname;
                document.getElementById('me-email').textContent = data.Email;
                document.getElementById('me-phonenum').textContent = data.Phonenum;
                document.getElementById('me-birthday').textContent = data.Birthday;
                document.getElementById('me-address').textContent = data.Address;

                modal.hide();
            })
            .catch(err => alert("Sunucu hatası: " + err.message));
        });
    });
</script>

        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
